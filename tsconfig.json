{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": [
      "dom",
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    ".idea",
    ".vscode",
    "build",
    "lib",
    "**/*.spec.*",
    "**/*.test.*"
  ]
}
